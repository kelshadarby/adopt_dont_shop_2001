<% @shelter_pet.pets.each do |pet| %>
  <% if pet.adoption_status == "Adoptable" %>
    <img src="<%= pet.image %>" alt="Pictured: <%= pet.name %>">
    <h2><%= pet.name %></h2>
    <p>Approximate Age: <%= pet.approximate_age %></p>
    <p>Sex: <%= pet.sex %></p>
  <% end %>
<% end %>

<%= link_to 'Create Pet', "/shelters/#{@shelter_pet.id}/pets/new" %>
